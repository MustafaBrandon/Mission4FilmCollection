@{
    ViewData["Title"] = "Movie List";
}

@model  List<ApplicationResponse>

    <br />
<h2>The Full Movie Collection</h2>
<br />
<table class="table table-bordered table-striped" >
    <thead class="font-weight-bold">


        <tr>
            <td>Film Name</td>
            <td>Year</td>
            <td>Director</td>
            <td>Category</td>
            <td>Rating</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var mov in Model)
            {
        <tr>
            <td>@mov.FilmTitle</td>
            <td>@mov.FilmYear</td>
            <td>@mov.FilmDirector</td>
            <td>@mov.Category.CategoryName</td>
            <td>@mov.FilmRating</td>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@mov.FilmId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@mov.FilmId">Delete</a></td>
        </tr>
            }
    </tbody>
</table>
